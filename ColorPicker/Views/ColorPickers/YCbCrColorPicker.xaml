<UserControl
    x:Class="ColorPicker.YCbCrColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColorPicker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="this"
    MinWidth="100"
    MinHeight="100"
    MaxWidth="1000"
    MaxHeight="1000"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="ColorPicker_Loaded"
    SizeChanged="ColorPicker_SizeChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="{Binding Size, ElementName=this}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="{Binding Size, ElementName=this}" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            x:Name="Grid_ColorPicker"
            Grid.Row="1"
            Grid.Column="1"
            MouseLeftButtonDown="Grid_ColorPicker_MouseLeftButtonDown"
            MouseLeftButtonUp="Grid_ColorPicker_MouseLeftButtonUp"
            MouseMove="Grid_ColorPicker_MouseMove"
            UseLayoutRounding="True">
            <Image
                x:Name="Image_CbCr"
                Margin="{Binding MarginWidth, ElementName=this}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Stretch="None" />
            <Image
                x:Name="Image_Pointer"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Stretch="None" />
        </Grid>
    </Grid>
</UserControl>
