<UserControl
    x:Class="ColorPicker.NumericBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColorPicker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="this"
    d:DesignHeight="20"
    d:DesignWidth="80"
    Background="White"
    LostFocus="NumericBox_LostFocus"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="{Binding ActualHeight, ElementName=this}" />
        </Grid.ColumnDefinitions>

        <TextBox
            x:Name="textBox"
            Grid.Column="0"
            MaxLength="8"
            MaxLines="1"
            PreviewTextInput="TextBox_PreviewTextInput"
            Text="{Binding Value, ElementName=this, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
            TextAlignment="Right"
            TextChanged="TextBox_TextChanged" />

        <Grid Grid.Column="1" MouseLeftButtonUp="Grid_MouseLeftButtonUp">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                x:Name="GridUp"
                Grid.Row="0"
                MouseLeftButtonDown="GridUp_MouseLeftButtonDown">
                <Rectangle Stroke="LightGray" />
                <Polygon
                    Margin="4,2"
                    Fill="Gray"
                    Points="0,10 5,0 10,10"
                    Stretch="Fill" />

                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Opacity" Value="1" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMaximum, ElementName=this}" Value="True">
                                <Setter Property="Opacity" Value="0.6" />
                            </DataTrigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightGray" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
            </Grid>

            <Grid
                x:Name="GridDown"
                Grid.Row="1"
                MouseLeftButtonDown="GridDown_MouseLeftButtonDown">
                <Rectangle Stroke="LightGray" />
                <Polygon
                    Margin="4,2"
                    Fill="Gray"
                    Points="0,0 5,10 10,0"
                    Stretch="Fill" />

                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Opacity" Value="1" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMinimum, ElementName=this}" Value="True">
                                <Setter Property="Opacity" Value="0.6" />
                            </DataTrigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightGray" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
